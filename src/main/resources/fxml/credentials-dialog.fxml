<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="15.0">
   <children>
      <!-- Header -->
      <VBox spacing="5.0">
         <children>
            <Label styleClass="dialog-title" text="Connect to Jira" />
            <Label styleClass="dialog-subtitle" text="Enter your Jira Cloud credentials to connect" />
         </children>
      </VBox>
      
      <!-- Form -->
      <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
        </rowConstraints>
         <children>
            <!-- Domain -->
            <Label text="Jira Domain:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <children>
                  <TextField fx:id="domainField" promptText="your-company.atlassian.net" />
                  <Label styleClass="help-text" text="Enter your Jira Cloud domain (without https://)" />
               </children>
            </VBox>
            
            <!-- Email -->
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <TextField fx:id="emailField" promptText="your.email@company.com" />
                  <Label styleClass="help-text" text="Your Jira account email address" />
               </children>
            </VBox>
            
            <!-- API Token -->
            <Label text="API Token:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <PasswordField fx:id="apiTokenField" promptText="Your API token" />
                  <HBox spacing="5.0">
                     <children>
                        <Label styleClass="help-text" text="Generate an API token from your Atlassian account" />
                        <Hyperlink fx:id="apiTokenHelpLink" styleClass="help-link" text="How to generate?" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Remember Credentials -->
            <Label GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <CheckBox fx:id="rememberCredentialsCheckBox" mnemonicParsing="false" text="Remember credentials (stored securely)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      
      <!-- Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <ProgressIndicator fx:id="progressIndicator" prefHeight="20.0" prefWidth="20.0" visible="false" />
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="connectButton" defaultButton="true" mnemonicParsing="false" styleClass="primary-button" text="Connect" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
